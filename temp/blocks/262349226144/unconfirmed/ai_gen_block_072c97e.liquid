{% doc %}
  @prompt
    tagline tite that i can adjust the font size and width, add ability to create space above and below
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tagline-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding-top: {{ block.settings.spacing_top }}px;
    padding-bottom: {{ block.settings.spacing_bottom }}px;
    padding-left: 20px;
    padding-right: 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-tagline__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-tagline__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.font_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-tagline-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.tagline_text != blank %}
    <p class="ai-tagline__text-{{ ai_gen_id }}">{{ block.settings.tagline_text }}</p>
  {% else %}
    <p class="ai-tagline__text-{{ ai_gen_id }}">Add your tagline text</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Tagline title",
  "settings": [
    {
      "type": "textarea",
      "id": "tagline_text",
      "label": "Tagline text",
      "default": "Discover the difference"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 24
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 300,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Space above",
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Space below",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Tagline title"
    }
  ]
}
{% endschema %}
