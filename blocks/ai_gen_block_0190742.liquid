{% doc %}
  @prompt
    a photo gallery of 3 scattered photos, i don't want the photos on the same line. I want them staggered on separate lines, like one on the left, one closer to right, one closer to left, I love this. do not angle the photos make them straight. , Can you make the photo corners sharp and square not rounded
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scattered-gallery-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding: {{ block.settings.spacing }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-scattered-gallery__container-{{ ai_gen_id }} {
    position: relative;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.vertical_gap }}px;
  }

  .ai-scattered-gallery__photo-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_intensity }}px {{ block.settings.shadow_intensity | times: 1.5 }}px {{ block.settings.shadow_intensity | times: 2 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-scattered-gallery__photo-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
    box-shadow: {{ block.settings.shadow_intensity | times: 1.5 }}px {{ block.settings.shadow_intensity | times: 2 }}px {{ block.settings.shadow_intensity | times: 3 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | times: 1.3 }});
    z-index: 10;
  }

  .ai-scattered-gallery__photo-{{ ai_gen_id }}--1 {
    width: {{ block.settings.photo_1_width }}%;
    margin-left: {{ block.settings.photo_1_offset }}%;
  }

  .ai-scattered-gallery__photo-{{ ai_gen_id }}--2 {
    width: {{ block.settings.photo_2_width }}%;
    margin-left: {{ block.settings.photo_2_offset }}%;
  }

  .ai-scattered-gallery__photo-{{ ai_gen_id }}--3 {
    width: {{ block.settings.photo_3_width }}%;
    margin-left: {{ block.settings.photo_3_offset }}%;
  }

  .ai-scattered-gallery__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-scattered-gallery__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 5;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-scattered-gallery__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-scattered-gallery__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 13px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-scattered-gallery__photo-{{ ai_gen_id }}--1,
    .ai-scattered-gallery__photo-{{ ai_gen_id }}--2,
    .ai-scattered-gallery__photo-{{ ai_gen_id }}--3 {
      width: 85%;
      margin-left: auto;
      margin-right: auto;
    }

    .ai-scattered-gallery__photo-{{ ai_gen_id }}--1 {
      margin-left: 0;
    }

    .ai-scattered-gallery__photo-{{ ai_gen_id }}--2 {
      margin-left: 15%;
    }

    .ai-scattered-gallery__photo-{{ ai_gen_id }}--3 {
      margin-left: 5%;
    }
  }
{% endstyle %}

<div class="ai-scattered-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scattered-gallery__container-{{ ai_gen_id }}">
    <div class="ai-scattered-gallery__photo-{{ ai_gen_id }} ai-scattered-gallery__photo-{{ ai_gen_id }}--1">
      {% if block.settings.image_1 %}
        <img
          src="{{ block.settings.image_1 | image_url: width: 800 }}"
          alt="{{ block.settings.image_1.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_1.width }}"
          height="{{ block.settings.image_1.height }}"
          class="ai-scattered-gallery__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-scattered-gallery__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-scattered-gallery__empty-state-{{ ai_gen_id }}">
            Add photo 1
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-scattered-gallery__photo-{{ ai_gen_id }} ai-scattered-gallery__photo-{{ ai_gen_id }}--2">
      {% if block.settings.image_2 %}
        <img
          src="{{ block.settings.image_2 | image_url: width: 800 }}"
          alt="{{ block.settings.image_2.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_2.width }}"
          height="{{ block.settings.image_2.height }}"
          class="ai-scattered-gallery__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-scattered-gallery__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-scattered-gallery__empty-state-{{ ai_gen_id }}">
            Add photo 2
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-scattered-gallery__photo-{{ ai_gen_id }} ai-scattered-gallery__photo-{{ ai_gen_id }}--3">
      {% if block.settings.image_3 %}
        <img
          src="{{ block.settings.image_3 | image_url: width: 800 }}"
          alt="{{ block.settings.image_3.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_3.width }}"
          height="{{ block.settings.image_3.height }}"
          class="ai-scattered-gallery__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-scattered-gallery__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-scattered-gallery__empty-state-{{ ai_gen_id }}">
            Add photo 3
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

