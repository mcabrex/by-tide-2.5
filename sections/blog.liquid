        "label": "Show blog title",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "show-date",
        "label": "Show blog date",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "show-tag-filter",
        "label": "Show tag filter",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "show-author",
        "label": "Show author",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "show-excerpt",
        "label": "Show excerpt",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "show-rss",
        "label": "Show RSS",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "columns",
        "label": "Columns",
        "type": "range",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      },
      {
        "type": "header",
        "content": "Featured article"
      },
      {
        "id": "show-featured",
        "label": "Show",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "tag",
        "label": "Tag",
        "type": "text",
        "default": "featured",
        "info": "Tag a blog post with \"featured\" or change this to match an existing tag"
      },
      {
        "id": "image-height",
        "label": "Height",
        "type": "select",
        "options": [
          { "value": "small", "label": "Small" },
          { "value": "medium", "label": "Medium" },
          { "value": "large", "label": "Large (natural height)" }
        ],
        "default": "medium"
      },
      {
        "id": "alt-color",
        "label": "Use light text color",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "parallax-enabled",
        "label": "Enable parallax",
        "type": "checkbox",
        "default": false,
        "info": "Fixes image position when you scroll, use images with a height of at least 2000px to preserve resolution"
      },
      {
        "id": "apply-overlay",
        "label": "Darken image",
        "type": "checkbox",
        "default": true,
        "info": "Can enhance text visibility"
      }
    ]
  }
{% endschema %}