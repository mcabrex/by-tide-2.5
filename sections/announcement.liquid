
{%- liquid
  assign bg_color = section.settings.background-color
  assign enabled = section.settings.enabled
  assign icon = section.settings.icon
  assign light_text = section.settings.light-text
  assign link = section.settings.link
  assign text = section.settings.text

  assign show_on_page = true
  if section.settings.home-page-only and template != 'index'
    assign show_on_page = false
  endif

  capture link_settings
    echo settings.color--alternative
    echo settings.color--accent
  endcapture
-%}

{% if enabled and show_on_page %}
  <div
    class="announcement--root"
    data-section-id="{{ section.id }}"
    data-section-type="announcement"
    data-background-color="{{ bg_color }}"
    data-light-text="{{ light_text }}"
    data-spacing="none"
  >
    {% if link != blank %}
      <a class="announcement--link" href="{{ link }}">
    {% endif %}

    <div class="announcement--wrapper">
      {% if icon %}
        <div class="announcement--icon">
          {{ icon | img_url: '50x50' | img_tag: icon.alt }}
        </div>
      {% endif %}

      {% if text != blank %}
        <div class="announcement--text" data-item="accent-text">
          {{ text | escape }}
        </div>
      {% endif %}
    </div>

    {% if link != blank %}
      </a>
    {% endif %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "home-page-only",
      "label": "Home page only",
      "default": true
    },
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" },
        { "label": "Accent", "value": "accent" }
      ],
      "default": "dark"
    },
    {
      "id": "light-text",
      "label": "Use light text color",
      "type": "checkbox",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon image",
      "info": "50 x 50px recommended"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Announcement for sales, promos, shipping info & more â€” Click and Collect available"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ]
}
{% endschema %}