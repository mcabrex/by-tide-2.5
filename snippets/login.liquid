{% capture account %}
  {% if account_icon == 'icon' %}
    {% render 'icons', icon: 'account' %}
  {% else %}
    {{ 'layout.header.account_view_link' | t }}
  {% endif %}
{% endcapture %}

<div class="layout--login">
  {% if customer %}
    <a
      href="{{ routes.account_url }}"
      aria-label="{{ 'layout.header.account_view_link' | t }}"
      {% if is_off_canvas %}
        data-mq="small"
      {% endif %}
    >
      {{ account }}
    </a>
  {% else %}
    <a
      href="{{ routes.account_login_url }}"
      aria-label="{{ 'layout.header.account_view_link' | t }}"
      {% if is_off_canvas %}
        data-mq="small"
      {% endif %}
    >
      {{ account }}
    </a>
  {% endif %}
</div>
